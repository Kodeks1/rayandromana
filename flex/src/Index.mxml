<?xml version="1.0"?>
<s:Application
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:spicefactory="http://www.spicefactory.org/parsley"
    xmlns:view="com.rayandromana.view.*"
    skinClass="com.rayandromana.view.skin.ApplicationSkin"
    width="100%">

    <fx:Metadata>
        [ResourceBundle("lang")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.rayandromana.context.AppContext;
        ]]>
    </fx:Script>

    <fx:Style source="assets/styles.css"/>

    <fx:Declarations>
        <spicefactory:ContextBuilder>
            <spicefactory:FlexConfig type="{AppContext}"/>
        </spicefactory:ContextBuilder>
    </fx:Declarations>

    <s:Scroller width="100%" height="100%" top="45">
        <view:MainView width="100%"/>
    </s:Scroller>

    <view:Header width="100%" height="45"/>

</s:Application>
