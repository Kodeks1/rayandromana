<?xml version="1.0"?>
<s:HGroup
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:spicefactory="http://www.spicefactory.org/parsley"
    width="100%"
    height="400">

    <fx:Script>
        <![CDATA[
        import com.rayandromana.model.presentation.InfoPM;

        [Bindable]
        public var model:InfoPM;
        ]]>
    </fx:Script>

    <fx:Declarations>
        <spicefactory:FastInject objectId="infoPM" property="model"/>
    </fx:Declarations>

    <s:VGroup>
        <s:Image
            width="190"
            height="190"
            source="assets/img/rsvp.jpg"
            click="model.gotoRsvp()"
            />
        <s:Group>
            <s:Label text="{model.content.rsvp}"/>
        </s:Group>
    </s:VGroup>

    <s:VGroup>
        <s:Image
            width="190"
            height="190"
            source="assets/img/guestbook.jpg"
            click="model.gotoGuestbook()"
            />
        <s:Group>
            <s:Label text="{model.content.guestbook}"/>
        </s:Group>
    </s:VGroup>

    <s:VGroup>
        <s:Image
            width="190"
            height="190"
            source="assets/img/gifts.jpg"
            click="model.launchGiftsPopup()"
            useHandCursor="true"
            buttonMode="true"
            />
        <s:Group>
            <s:Label text="{model.content.gifts}"/>
        </s:Group>
    </s:VGroup>

    <s:VGroup>
        <s:Image
            width="190"
            height="190"
            source="assets/img/contact.jpg"
            click="model.launchContactPopup()"
            useHandCursor="true"
            buttonMode="true"
            />
        <s:Group>
            <s:Label text="{model.content.contact}"/>
        </s:Group>
    </s:VGroup>

</s:HGroup>
