<?xml version="1.0"?>
<s:VGroup
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:spicefactory="http://www.spicefactory.org/parsley"
    width="100%"
    height="800">

    <fx:Script>
        <![CDATA[
        import com.rayandromana.model.presentation.PhotosPM;

        [Bindable]
        public var model:PhotosPM;
        ]]>
    </fx:Script>

    <fx:Declarations>
        <spicefactory:FastInject objectId="photosPM" property="model"/>
    </fx:Declarations>

    <s:Label text="{model.content.photos}"/>

    <s:DataGroup
        dataProvider="{model.content.photosCollection}"
        itemRenderer="com.rayandromana.view.renderer.PhotoRenderer"
        width="100%"
        >

        <s:layout>
            <s:TileLayout/>
        </s:layout>

    </s:DataGroup>

    <s:Label text="{model.content.photoGuide}"/>
    <s:Label text="{model.content.photoTag}"/>
    <s:Button label="{model.content.iPhoneApp}"/>

</s:VGroup>
